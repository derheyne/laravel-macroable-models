{
    "name": "dheyne/laravel-macroable-models",
    "description": "Dynamically add methods, accessors, mutators, and local scopes via macros.",
    "keywords": [
        "laravel",
        "eloquent",
        "macroable-models"
    ],
    "homepage": "https://github.com/derheyne/laravel-macroable-models",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Heyne",
            "email": "dhy@hey.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/database": "^8.0"
    },
    "require-dev": {
        "brianium/paratest": "^6.2",
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench-core": "^6.0",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "Dheyne\\LaravelMacroableModels\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dheyne\\LaravelMacroableModels\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
